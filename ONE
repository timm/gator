#!/usr/bin/env bash

here=$(cd $( dirname "${BASH_SOURCE[0]}" ) && pwd )
chmod +x $here/ONE
chmod +x $here/ALL

oops() { gawk '
   /FAIL/ {print "\033[31m"$0"\033[0m" ; next }
   /PASS/ {print  "\033[32m"$0"\033[0m"; next }
          {print}'
}

doc1() {
  cat $1 | lisp $here/src/lib/doc.lisp
}
sbcl() {
  rlwrap $(which sbcl) --noinform
}

lisp() {
  local b4=$PWD
  cd $(dirname $1) 
  local f=$(basename $1)
  shift
  $(which sbcl) --script $f $* 2> >(gawk '      {print} 
                                          /^5:/ {exit}')
  cd $b4
}
(cd $here/src
for f in $(find . -type f  -name "[[:lower:]]*.lisp"); do
  g=$here/docs/${f%.*}.md
 if [ "$f" -nt "$g" ]; then
    echo "f $f g $g"
    mkdir -p $(dirname $g)
    doc1 $f > $g
  fi
done
)

if [ "$1" == "--ok" ]; then
   lisp $2 | oops
   exit
elif [ "$1" == "--oks" ]; then
   for f in `find src -name "*ok.lisp"`; do
     lisp $f | oops
   done | gawk '/FAIL/ { n++} END {exit n>1}'
   exit
fi

want=$here/.gitignore
[ -f "$want" ] || cat<<'EOF'>$want
# Swap
[._]*.s[a-v][a-z]
!*.svg  # comment out if you don't need vector files
[._]*.sw[a-p]
[._]s[a-rt-v][a-z]
[._]ss[a-gi-z]
[._]sw[a-p]

# Session
Session.vim
Sessionx.vim

# Temporary
.netrwhist
*~
# Auto-generated tag files
tags
# Persistent undo
[._]*.un~

.DS_Store
EOF

want=$here/.travis.yml
[ -f "$want" ] || cat<<'EOF'>$want
language: common-lisp
sudo: required

env:
  matrix:
    - LISP=sbcl
    - LISP=clisp

install:
  # Install cl-travis
  - curl https://raw.githubusercontent.com/luismbo/cl-travis/master/install.sh | bash

script:
  - cd src
  - sbcl --script yes_my.lisp

notifications:
  email:
    - timm@ieee.org
EOF
